<% content_for :title, "Post" %>

<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold">
            <%= @post.user.username.first.upcase %>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900"><%= @post.user.username %></h3>
            <p class="text-sm text-gray-500"><%= time_ago_in_words(@post.timestamp) %> ago</p>
          </div>
        </div>
        
        <div class="flex space-x-2">
          <%= link_to "Edit", edit_post_path(@post), class: "px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded hover:bg-blue-200 transition-colors" %>
          <%= link_to "Delete", post_path(@post), method: :delete, 
                      confirm: "Are you sure?",
                      class: "px-3 py-1 text-sm bg-red-100 text-red-700 rounded hover:bg-red-200 transition-colors" %>
        </div>
      </div>
      
      <% if @post.content.present? %>
        <div class="prose max-w-none mb-4">
          <p class="text-gray-800 whitespace-pre-wrap"><%= @post.content %></p>
        </div>
      <% end %>
      
      <% if @post.attachments.any? %>
        <div class="mt-4">
          <h4 class="text-sm font-medium text-gray-700 mb-2">Attachments:</h4>
          <div class="space-y-2">
            <% @post.attachments.each do |attachment| %>
              <div class="flex items-center space-x-2 p-2 bg-gray-50 rounded">
                <span class="text-sm text-gray-600">ðŸ“Ž</span>
                <span class="text-sm text-gray-800"><%= attachment.filename %></span>
                <span class="text-xs text-gray-500">(<%= number_to_human_size(attachment.file_size) %>)</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="mt-6">
    <%= link_to "â† Back to Posts", posts_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
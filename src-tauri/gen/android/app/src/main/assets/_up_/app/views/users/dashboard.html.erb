  margin: 0 0 10px 0;
  color: #2d3748;
  font-size: 1.1rem;
}

.step-card p {
  color: #6b7280;
  margin-bottom: 15px;
  font-size: 0.9rem;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}

.stat-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
}

.stat-number {
  font-size: 2rem;
  font-weight: bold;
  color: var(--primary-color, #3b82f6);
  margin-bottom: 5px;
}

.stat-label {
  color: #6b7280;
  font-size: 0.9rem;
  font-weight: 500;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.tip {
  display: flex;
  align-items: flex-start;

  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.step-card {
  background: rgba(248, 249, 250, 0.8);
  border: 1px solid rgba(222, 226, 230, 0.6);
  border-radius: 12px;
  padding: 20px;
  text-align: center;
}

.step-icon {
  font-size: 2rem;
  margin-bottom: 10px;
}


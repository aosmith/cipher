}

.tip-icon {
  font-size: 1.2rem;
  flex-shrink: 0;
  margin-top: 2px;
}

.tip-content {
  color: #4a5568;
  line-height: 1.5;
}

.tip-content strong {
  color: #2d3748;
}

.btn {
  padding: 10px 20px;
  border-radius: 8px;
  font-weight: 500;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.2s;

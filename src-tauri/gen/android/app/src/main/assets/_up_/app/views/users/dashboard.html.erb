<% content_for :title, "Dashboard - Cipher" %>

<div class="dashboard">
  <div class="dashboard-header">
    <h1>üéâ Welcome to Cipher, <%= @current_user.display_name || @current_user.username %>!</h1>
    <p class="dashboard-subtitle">Your secure, zero-knowledge identity has been created</p>
  </div>

  <!-- Key Information Section -->
  <div class="dashboard-section">
    <div class="key-info-card">
      <h2>üîê Your Cryptographic Identity</h2>
      <p>Your identity is secured by cryptographic keys. Keep this information safe!</p>
      
      <div class="key-display">
        <div class="key-item">
          <label>Public Key:</label>
          <div class="key-value">
            <code><%= @current_user.public_key %></code>
            <button onclick="copyToClipboard('<%= @current_user.public_key %>')" class="btn-copy">üìã</button>
          </div>
          <small>Share this with others so they can send you encrypted messages</small>
        </div>
        
      </div>
    </div>
  </div>

  <!-- Getting Started Section -->
  <div class="dashboard-section">
    <div class="getting-started-card">
      <h2>üöÄ Getting Started</h2>
      <p>Here's what you can do with your Cipher account:</p>
      
      <div class="steps-grid">
        <div class="step-card">
          <div class="step-icon">üìù</div>
          <h3>Create Your First Post</h3>
          <p>Share encrypted content with the network</p>
          <%= link_to "Create Post", new_post_path, class: "btn btn-primary" %>
        </div>
        
        <div class="step-card">
          <div class="step-icon">üë•</div>
          <h3>Connect with Friends</h3>
          <p>Find and add other Cipher users</p>
          <%= link_to "Manage Friends", friends_users_path, class: "btn btn-secondary" %>
        </div>
        
        <div class="step-card">
          <div class="step-icon">üåê</div>
          <h3>Local Hosting</h3>
          <p>Host content locally or connect to peers</p>
          <%= link_to "Local Hosting", local_hosting_users_path, class: "btn btn-secondary" %>
        </div>
        
        <div class="step-card">
          <div class="step-icon">üí∞</div>
          <h3>Earn CPH Tokens</h3>
          <p>Become a storage host and earn rewards</p>
          <%= link_to "Host Dashboard", host_dashboard_users_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="dashboard-section">
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-number">0</div>
        <div class="stat-label">Posts Created</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-number">0</div>
        <div class="stat-label">Friends Connected</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-number">0</div>
        <div class="stat-label">Files Encrypted</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-number">Active</div>
        <div class="stat-label">Identity Status</div>
      </div>
    </div>
  </div>

  <!-- Security Tips -->
  <div class="dashboard-section">
    <div class="security-tips-card">
      <h2>üõ°Ô∏è Security Best Practices</h2>
      <div class="tips-list">
        <div class="tip">
          <span class="tip-icon">üîê</span>
          <div class="tip-content">
            <strong>Backup Your Keys:</strong> Export and securely store your private key - we cannot recover it if lost
          </div>
        </div>
        
        <div class="tip">
          <span class="tip-icon">üîí</span>
          <div class="tip-content">
            <strong>Keep Keys Private:</strong> Never share your private key with anyone
          </div>
        </div>
        
        <div class="tip">
          <span class="tip-icon">üì±</span>
          <div class="tip-content">
            <strong>Multiple Devices:</strong> Import your keys on other devices to access your account
          </div>
        </div>
        
        <div class="tip">
          <span class="tip-icon">üåê</span>
          <div class="tip-content">
            <strong>Zero-Knowledge:</strong> Your data is encrypted end-to-end - even we can't read it
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.dashboard {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.dashboard-header {
  text-align: center;
  margin-bottom: 40px;
  background: white;
  border-radius: 16px;
  padding: 30px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.dashboard-header h1 {
  font-size: 2.5rem;
  margin-bottom: 10px;
  color: var(--primary-color, #3b82f6);
}

.dashboard-subtitle {
  font-size: 1.2rem;
  color: var(--text-secondary, #6b7280);
  margin-bottom: 0;
}

.dashboard-section {
  margin-bottom: 40px;
}

.key-info-card,
.getting-started-card,
.security-tips-card {
  background: white;
  border-radius: 16px;
  padding: 30px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.key-info-card h2,
.getting-started-card h2,
.security-tips-card h2 {
  margin-top: 0;
  color: #2d3748;
  font-weight: 600;
  margin-bottom: 15px;
}

.key-display {
  background: rgba(248, 249, 250, 0.8);
  padding: 20px;
  border-radius: 12px;
  border: 1px solid rgba(222, 226, 230, 0.6);
}

.key-item {
  margin-bottom: 20px;
}

.key-item label {
  display: block;
  font-weight: 600;
  color: #4a5568;
  margin-bottom: 8px;
}

.key-value {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 5px;
}

.key-value code {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  padding: 12px;
  border-radius: 8px;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 0.85em;
  word-break: break-all;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.btn-copy {
  background: rgba(102, 126, 234, 0.1);
  border: 1px solid rgba(102, 126, 234, 0.3);
  color: #667eea;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-copy:hover {

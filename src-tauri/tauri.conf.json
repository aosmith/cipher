{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Cipher",
  "version": "0.8.1",
  "identifier": "com.cipher.social",
  "build": {
    "beforeDevCommand": "bin/desktop_dev_server",
    "beforeBuildCommand": "RAILS_ENV=desktop bundle exec rails assets:precompile",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../public"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "http://127.0.0.1:3000/",
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "Cipher",
        "width": 1400,
        "minHeight": 720,
        "minWidth": 1024,
        "center": true,
        "titleBarStyle": "Visible",
        "hiddenTitle": false,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:* 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:*",
      "devCsp": "default-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:* 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:*",
      "freezePrototype": false,
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "category": "SocialNetworking",
    "copyright": "Copyright Â© 2025 Cipher Team",
    "shortDescription": "End-to-End Encrypted P2P Social Network", 
    "longDescription": "A zero-knowledge, end-to-end encrypted peer-to-peer social network built with Rails. Share posts, images, and media with complete privacy.",
    "resources": [
      "../app",
      "../config",
      "../db",
      "../public",
      "../lib",
      "../Gemfile",
      "../Gemfile.lock",
      "../config.ru",
      "../bin/rails"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["app", "dmg"],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "iOS": {
      "developmentTeam": "XXXXXXXXXX"
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "window": {
      "close": true,
      "hide": true,
      "show": true,
      "maximize": true,
      "minimize": true,
      "unmaximize": true,
      "unminimize": true,
      "startDragging": true
    },
    "notification": {},
    "dialog": {
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "clipboardManager": {
      "readText": true,
      "writeText": true
    },
    "globalShortcut": {},
    "theme": {
      "theme": true
    }
  }
}
